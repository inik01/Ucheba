#include <iostream>
#include <iomanip>
#include <cmath>
 
using namespace std;
 
int main()
{
 
setlocale (1000,"");
 
double amount, principal = 2000.0, rate = .21;
 
cout << "1 депозит     " << setw(21) << "Сумма депозита" << endl;
 
for (int month = 1; month < 4; month++)
{ 
amount = principal * pow(1.0 + rate, month);
cout << setw(3) << month
<< setiosflags (ios::fixed | ios:: showpoint)
<< setw (21) << setprecision (2) << amount << endl;
}
 using namespace std;
 {
    double amount, principal = 1000.0, rate = .20;
 
cout << "2 депозит     " << setw(21) << "Сумма депозита" << endl;
 
    for (int month = 1; month < 4; month++){
    amount = principal * pow(1.0 + rate, month);
    cout << setw(3) << month
        << setiosflags (ios::fixed | ios:: showpoint)
        << setw (21) << setprecision (2) << amount << endl;
    }
    
    return 0;
}
return 0;
}
